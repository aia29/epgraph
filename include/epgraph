#pragma once

#include <core_variable.hpp>
#include <ops_add.hpp>
#include <ops_sub.hpp>
#include <ops_mul.hpp>
#include <ops_div.hpp>
#include <ops_sin.hpp>
#include <ops_cos.hpp>
#include <ops_exp.hpp>

namespace epg {

void eval(const Scalar var) { var->eval(); }

void diff(const Scalar var) { var->diff(1); }

void zero_grad(const Scalar var) { var->zero_grad(); }

} // namespace epg
